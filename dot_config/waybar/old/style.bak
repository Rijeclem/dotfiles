@import url("./colors.css");

* {
    border: none;
    border-radius: 1px;
    font-size: 13px;
    font-family: "Jura", "JetBrainsMonoNL Nerd Font", "Symbols Nerd Font", "Font Awesome 6 Free", sans-serif;
    min-height: 0;
    font-weight: bold;
}

window#waybar {
    background: linear-gradient(to top, cyan 0%, transparent 100%);
    background-size: 200% 200%;
    /* make it bigger than container for animation */
    animation: wave 5s ease-in-out infinite;
    color: @text;
}

@keyframes wave {
    0% {
        background-position: 0% 0%;
    }

    25% {
        background-position: 50% 10%;
    }

    50% {
        background-position: 100% 0%;
    }

    75% {
        background-position: 50% 5%;
    }

    100% {
        background-position: 0% 0%;
    }
}


window#waybar.hidden {
    opacity: 0.2;
}

tooltip {
    background-color: @base;
    border: 1px solid @surface1;
}

/* ---------- Workspaces ---------- */
#workspaces {
    /* margin: 0 8px; */
    /* padding: 0 4px; */
}

#workspaces button {
    padding: 0 10px;
    margin: 4px 3px;
    border-radius: 10px;
    border: none;
    background: rgba(255, 255, 255, 0.07);
    /* subtle background */
    color: #cdd6f4;
    /* text color */
    transition: all 0.2s ease;
    font-size: 14px;
}

/* Hover effect */
#workspaces button:hover {
    background: rgba(255, 255, 255, 0.15);
    color: #ffffff;
}

/* Active workspace */
#workspaces button.active {
    background: rgba(166, 227, 161, 0.3);
    /* green accent for active */
    color: #a6e3a1;
    font-weight: bold;
}

/* Urgent workspace (e.g., new window) */
#workspaces button.urgent {
    background: rgba(243, 139, 168, 0.3);
    color: #f38ba8;
}

/* Inactive workspaces */
#workspaces button:not(.active):not(:hover) {
    opacity: 0.7;
}

tooltip label {
    color: @text;
}

button {
    box-shadow: inset 0 -3px transparent;
    border: none;
    border-radius: 1px;
}

button:hover {
    background: inherit;
    box-shadow: inset 0 -3px @text;
}



#taskbar button.active {
    background-image: linear-gradient(0deg, @surface1, @mantle);
}

#mode {
    box-shadow: inset 0 -2px @text;
}

#mpris,
#custom-weather,
#clock,
#language,
#wireplumber,
#bluetooth,
#network,
#memory,
#cpu,
#temperature,
#disk,
#custom-kernel,
#mode,
#tray {
    padding: 0 10px;
    margin: 5px 1px;
    color: @text;
}



.modules-right>widget:last-child>#workspaces {
    margin-right: 0;
}

#custom-weather {
    background-color: @sapphire;
    color: @mantle;
    margin-right: 5px;
}

#custom-kernel {
    background-color: @rosewater;
    color: @mantle;
}

#clock {
    background-color: @green;
    color: @mantle;
}

#clock.time {
    background-color: @teal;
    color: @mantle;
}

@keyframes blink {
    to {
        background-color: @mantle;
        color: @text;
    }
}

label:focus {
    background-color: @mantle;
}

#cpu {
    background-color: @mauve;
    color: @mantle;
    min-width: 45px;
}

#memory {
    background-color: @red;
    color: @mantle;
}

#disk {
    background-color: @flamingo;
    color: @mantle;
}

#network {
    background-color: @peach;
    color: @mantle;
}

#network.disconnected {
    background-color: red;
    color: @mantle;
}

#bluetooth {
    background-color: @maroon;
    color: @mantle;
    min-width: 40px;
}

#wireplumber {
    background-color: @yellow;
    color: @mantle;
}

#wireplumber.muted {
    background-color: red;
    color: @mantle;
}

#temperature {
    background-color: @pink;
    color: @mantle;
    min-width: 37px;
}

#temperature.critical {
    background-color: red;
    color: @mantle;
    min-width: 37px;
}

#mpris {
    background-color: @base;
    color: @text;
}

#tray {
    background-color: @overlay0;
    color: @text;
}

#tray>.passive {
    -gtk-icon-effect: dim;
}

#tray>.needs-attention {
    -gtk-icon-effect: highlight;
    background-color: @mantle;
}

#idle_inhibitor {
    background-color: @base;
    color: @text;
    font-family: Inter;
}

#idle_inhibitor.activated {
    background-color: @text;
    color: @base;
}

#scratchpad {
    background-color: @base;
    color: @text;
}

#scratchpad.empty {
    background-color: transparent;
}
