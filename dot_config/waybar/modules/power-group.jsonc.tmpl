{
  "group/power-group": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "children-class": "powermenu-drawer",
      "transition-left-to-right": true,
      "click-to-reveal": false
    },
    "modules": [
        {{ if eq .chezmoi.hostname "locke" }}
            "custom/power", // First element is the "group leader" and won't ever be hidden
            "backlight/slider",
            "backlight"
        {{ else }}
            "custom/power", // First element is the "group leader" and won't ever be hidden
            "custom/lock",
            "custom/quit",
            "custom/suspend"
        {{ end }}
    ]
  },
  "custom/power": {
    "format": "",
    "tooltip": true,
    "tooltip-format": "Open power menu",
    "on-click": " wlogout -C /home/rad/.config/wlogout/styles.css "
  },

  "custom/lock": {
    "format": "󰌾",
    "tooltip-format": "Lock the system",
    "on-click": "~/.config/rofi/powermenu/run.sh lock"
  },
  "custom/quit": {
    "format": "󰍃",
    "tooltip-format": "Logout",
    "on-click": "~/.config/rofi/powermenu/run.sh logout"
  },
  "custom/suspend": {
    "format": "󰤄",
    "tooltip-format": "Suspend the system",
    "on-click": "~/.config/rofi/powermenu/run.sh suspend"
  },

    "backlight":{
        "format": "%{percent} {icon}",
        "format-icons": ["󰃞", "󰃟", "󰃠"],
        "reverse-mouse-scrolling": true, // Logical behavior on mouse
        "scroll-step": 5,
        "smooth-scrolling-threshold": 3.0
    },
"backlight/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
}
}
